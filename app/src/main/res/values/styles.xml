<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="GreetingTextTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="fontPath">fonts/Roboto-Light.ttf</item>
    </style>

    <style name="WelcomeTextTheme" parent="GreetingTextTheme">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="InputFieldsTheme" parent="Widget.AppCompat.EditText">
        <item name="android:layout_marginTop">@dimen/form_fields_vspace</item>
        <item name="android:layout_marginBottom">@dimen/form_fields_vspace</item>
        <item name="fontPath">fonts/Roboto-Light.ttf</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColorHint">@color/cardview_dark_background</item>
    </style>

    <style name="TimeTableItemText" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:textSize">14sp</item>
        <item name="fontPath">fonts/Roboto-Light.ttf</item>
    </style>

    <style name="ProfileTextTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">18sp</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="ProfileTextThemeMod" parent="ProfileTextTheme">
        <item name="android:gravity">left</item>
    </style>

    <style name="LoginEditTextTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_marginTop">@dimen/edit_text_margin</item>
        <item name="android:layout_marginBottom">@dimen/edit_text_margin</item>
    </style>

    <style name="CustomButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:paddingBottom">@dimen/button_padding</item>
        <item name="android:paddingTop">@dimen/button_padding</item>
        <item name="android:textSize">@dimen/custom_button_text_size</item>
    </style>

    <style name="WelcomeScreenButtons">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:paddingBottom">@dimen/edit_text_margin</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:paddingTop">@dimen/edit_text_margin</item>
        <item name="android:textSize">@dimen/custom_button_text_size</item>
    </style>

    <style name="WelcomeScreenTextThemeSmall" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="WelcomeScreenTextThemeMedium" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">34sp</item>
        <item name="fontPath">fonts/Roboto-Light.ttf</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>

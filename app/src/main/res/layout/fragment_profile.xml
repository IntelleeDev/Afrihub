<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="com.mikeoye.afrihub.fragments.ProfileFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="30dp"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView android:id="@+id/profile_image"
                android:layout_width="@dimen/profile_image_size"
                android:layout_height="@dimen/profile_image_size"
                android:layout_gravity="center"
                android:paddingBottom="5dp"
                android:src="@drawable/ic_account_circle_black_24dp"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/profileImageColor"/>

            <TextView  android:id="@+id/student_fullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Michael Okoye"
                style="@style/ProfileTextTheme"/>

            <TextView
                android:text="Profile info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:textColor="@color/cardview_dark_background"/>

            <View
                android:background="@color/cardview_shadow_start_color"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <GridLayout
                android:background="@drawable/rounded_corners"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:columnCount="2">

                <ImageView
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_marginRight="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|fill_vertical"
                    android:src="@drawable/ic_perm_identity_black_24dp"/>

                <TextView android:id="@+id/stud_id"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:padding="5dp"
                    android:textSize="14sp"
                    android:textColor="@color/cardview_dark_background"
                    android:layout_gravity="center|fill_horizontal"/>

                <Space
                    android:layout_height="@dimen/space_8dp"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_columnSpan="2"
                    android:layout_gravity="fill"/>

                <ImageView
                    android:layout_column="0"
                    android:layout_row="2"
                    android:layout_marginRight="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|fill_vertical"
                    android:src="@drawable/ic_mail_black_24dp"/>

                <TextView android:id="@+id/stud_email"
                    android:layout_column="1"
                    android:layout_row="2"
                    android:padding="5dp"
                    android:textSize="14sp"
                    android:textColor="@color/cardview_dark_background"
                    android:layout_gravity="center|fill_horizontal" />

                <Space
                    android:layout_height="@dimen/space_8dp"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:layout_columnSpan="2"
                    android:layout_gravity="fill"/>

                <ImageView
                    android:layout_column="0"
                    android:layout_row="4"
                    android:layout_marginRight="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|fill_vertical"
                    android:src="@drawable/ic_call_black_24dp"/>

                <TextView android:id="@+id/stud_phone_number"
                    android:layout_column="1"
                    android:layout_row="4"
                    android:padding="5dp"
                    android:textSize="14sp"
                    android:textColor="@color/cardview_dark_background"
                    android:layout_gravity="center|fill_horizontal" />

            </GridLayout>

        </LinearLayout>

</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <LinearLayout
        android:paddingRight="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView android:id="@+id/day_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Monday"
            android:gravity="center_horizontal|center_vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/text_color"
            style="@style/TimeTableItemText"
            android:layout_gravity="center_vertical"
            android:background="@drawable/day_item_shape"/>

        <LinearLayout android:orientation="vertical"
            android:layout_width="0dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView android:id="@+id/course_title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="center_horizontal"
                style="@style/TimeTableItemText"
                android:text="Oracle Database Administration 2"/>

            <LinearLayout
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp"
                    android:src="@drawable/ic_schedule_black_24dp"/>

                <TextView android:id="@+id/course_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    style="@style/TimeTableItemText"
                    android:text="9:00AM"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>